<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_margin"
        android:paddingRight="@dimen/view_margin"
        android:paddingTop="@dimen/view_margin">

        <TextView
            android:id="@+id/examTest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/examTest_titleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin" />

        <View
            style="@style/divider1"
            android:layout_marginTop="@dimen/view_margin" />

        <LinearLayout
            android:id="@+id/examTest_itemA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space10"
            android:paddingTop="@dimen/space10">

            <ImageView
                android:id="@+id/examTest_itemAIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_exam_a_normal" />

            <TextView
                android:id="@+id/examTest_itemAText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10" />
        </LinearLayout>

        <View style="@style/divider1" />

        <LinearLayout
            android:id="@+id/examTest_itemB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space10"
            android:paddingTop="@dimen/space10">

            <ImageView
                android:id="@+id/examTest_itemBIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_exam_b_normal" />

            <TextView
                android:id="@+id/examTest_itemBText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10" />
        </LinearLayout>

        <View style="@style/divider1" />

        <LinearLayout
            android:id="@+id/examTest_itemC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space10"
            android:paddingTop="@dimen/space10">

            <ImageView
                android:id="@+id/examTest_itemCIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_exam_c_normal" />

            <TextView
                android:id="@+id/examTest_itemCText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10" />
        </LinearLayout>

        <View style="@style/divider1" />

        <LinearLayout
            android:id="@+id/examTest_itemD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space10"
            android:paddingTop="@dimen/space10">

            <ImageView
                android:id="@+id/examTest_itemDIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_exam_d_normal" />

            <TextView
                android:id="@+id/examTest_itemDText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/divider1" />

    <Button
        android:id="@+id/examTest_itemSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin"
        style="@style/button"
        android:text="чбошод" />

    <TextView
        android:id="@+id/examTest_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/default_bg" />
</LinearLayout>
