<resources>

    <!--一行显示一个可以点击的TextView-->
    <style name="clickTextView">
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/view_margin</item>
        <item name="android:paddingTop">@dimen/view_margin</item>
        <item name="android:paddingBottom">@dimen/view_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/tv_onelineclick_bg</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 图标下文字样式 -->
    <style name="imageText">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--分割线样式-->
    <style name="dividerFill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider10</item>
    </style>
    <style name="divider10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/divider10</item>
    </style>
    <style name="divider1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider1</item>
    </style>

    <!--导航栏按钮样式-->
    <style name="navigation_text">
        <item name="android:textColor">@color/navigation_text</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <!--标题文字样式-->
    <style name="title_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
